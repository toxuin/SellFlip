<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/single_ad_secondary"
    android:orientation="vertical"
    android:padding="10dp"
    android:minHeight="280dp">

    <TextView
        android:id="@+id/adDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Date 10 Feb 2015"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12sp"
        android:textStyle="italic"/>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#22000000"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:id="@+id/titleRow">

        <TextView
            android:id="@+id/adTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="20sp"/>
    </TableRow>

    <TextView
        android:id="@+id/adDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Description"
        android:textSize="16sp" android:layout_below="@+id/titleRow" android:layout_marginTop="10dp"/>

    <View
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_above="@+id/adAddress"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/single_ad_dark"/>

    <TextView
        android:id="@+id/adAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/adPhone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Close to: "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/adPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/adPrice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Phone: 123-444-1323"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/adPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Price"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"/>

</RelativeLayout>
